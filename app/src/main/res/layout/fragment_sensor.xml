                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kelembaban"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tanah"
                    android:textColor="@android:color/white"
